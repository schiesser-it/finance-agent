{
  "name": "finance-agent",
  "version": "0.0.1",
  "description": "Interactive coding assistant for Jupyter Notebooks for Finance",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "finance-agent": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.tsx --format esm --minify --platform node --target node20 --out-dir dist --clean --no-splitting",
    "dev": "tsx src/index.tsx",
    "start": "node dist/index.js",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm build",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.71",
    "ink": "^4.4.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.7.0"
  },
  "keywords": [
    "cli",
    "interactive",
    "react",
    "ink"
  ]
}