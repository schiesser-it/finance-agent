{
  "name": "finagent",
  "version": "0.0.13",
  "description": "Interactive coding assistant for Jupyter Notebooks for Finance",
  "type": "module",
  "main": "dist/index.js",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/schiesser-it/finance-agent.git"
  },
  "bin": {
    "finagent": "dist/index.js"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsx src/index.tsx",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "changeset": "changeset",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "version": "changeset version && npm install --package-lock-only"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.95",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "ink": "^6.1.1",
    "llama-cloud-services": "^0.3.3",
    "react": "^19.1.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19.1.10",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.4",
    "vitest": "^3.2.4",
    "zod": "^3.24.2"
  },
  "keywords": [
    "cli",
    "interactive",
    "react",
    "ink"
  ]
}
